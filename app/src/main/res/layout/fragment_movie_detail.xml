<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:background="#167"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_detail_movie_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="32dp"
                    android:text="Title"
                    android:textColor="#fff"
                    android:textSize="32sp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/fragment_detail_movie_image"
                    android:layout_width="150dp"
                    android:layout_height="220dp"
                    android:layout_marginRight="16dp"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="16dp"
                    >

                    <TextView
                        android:id="@+id/fragment_detail_movie_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="2015"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/fragment_detail_movie_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="8.2/10"
                        android:textColor="#000" />

                    <Button
                        android:id="@+id/fragment_detail_movie_make_favorite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#199"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:text="@string/make_as_favorite" />


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:id="@+id/fragment_detail_movie_overview"
                android:text="Growing up can be a bumpy road, and it's no exception for Riley, who is uprooted from her Midwest life when her father starts a new job in San Francisco. Like all of us, Riley is guided by her emotions - Joy, Fear, Anger, Disgust and Sadness. T" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>